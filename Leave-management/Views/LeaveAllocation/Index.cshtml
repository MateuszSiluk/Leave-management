@model Leave_management.Models.LeaveAllocationVM.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Leave Types
            </th>
            
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            
            <td>
                
                @Html.ActionLink("Allocate To Emplyes", "SetLeave", new {id=item.Id })
               
                
            </td>
        </tr>
}
    </tbody>
</table>
